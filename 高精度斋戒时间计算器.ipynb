import datetime
import pytz
import ephem
from astral.sun import sun
from astral import Observer
from timezonefinder import TimezoneFinder
from geopy.geocoders import Nominatim

def parse_dms(coord_str: str, coord_type: str) -> float:
    """
    将度.分.秒+方向（N/S/E/W）格式的字符串解析为十进制度数。
    coord_type: 'latitude' 或 'longitude'
    例: "39.54.32N" -> 39 + 54/60 + 32/3600 = 39.909°
    若方向是 S 或 W，则返回负值。
    """
    if not coord_str:
        raise ValueError("坐标输入为空")
    coord_str = coord_str.strip().upper()
    dir_letter = coord_str[-1]
    body = coord_str[:-1]
    if coord_type == 'latitude':
        if dir_letter not in ('N', 'S'):
            raise ValueError("纬度方向必须为 N 或 S")
    elif coord_type == 'longitude':
        if dir_letter not in ('E', 'W'):
            raise ValueError("经度方向必须为 E 或 W")
    else:
        raise ValueError("未知的 coord_type")
    parts = body.split('.')
    if len(parts) != 3:
        raise ValueError(f"{coord_type}格式错误，应为 度.分.秒+方向，如 39.54.32N")
    deg_str, min_str, sec_str = parts
    try:
        d = float(deg_str)
        m = float(min_str)
        s = float(sec_str)
    except:
        raise ValueError("度、分、秒必须是数字")
    dec = d + m/60 + s/3600
    if dir_letter in ('S', 'W'):
        dec = -dec
    return dec

def main():
    # 1. 获取用户输入的经纬度 (格式: 度.分.秒+方向)
    #    纬度结尾加 N 或 S，例如 39.54.32N
    #    经度结尾加 E 或 W，例如 116.23.11E
    lat_str = input("请输入纬度 (格式: 度.分.秒+N/S，例如 39.54.32N): ").strip()
    lon_str = input("请输入经度 (格式: 度.分.秒+E/W，例如 116.23.11E): ").strip()
    try:
        lat = parse_dms(lat_str, 'latitude')
        lon = parse_dms(lon_str, 'longitude')
    except ValueError as ve:
        print("输入的经纬度格式错误：", ve)
        print("请按照 度.分.秒+方向 (例如 39.54.32N 或 116.23.11E) 再试一次。")
        return

    # 2. 反向地理编码，获取所在地区名称
    try:
        geolocator = Nominatim(user_agent="moon_app")
        location = geolocator.reverse(f"{lat}, {lon}", language="zh")
    except Exception as e:
        print("反向地理编码出错:", e)
        location = None

    if location is not None:
        print("反向地理编码结果:", location.address)
    else:
        print("无法获取所在地区名称")

    # 3. 根据经纬度获取时区
    tf = TimezoneFinder()
    tz_name = tf.timezone_at(lat=lat, lng=lon)
    if tz_name is None:
        tz_name = "UTC"
        print("无法确定时区，默认使用 UTC")
    tz = pytz.timezone(tz_name)
    print("使用时区:", tz_name)

    # 4. 固定天数为 100 天
    days = 100

    # 5. 计算连续日出时刻（定义日节点为：当日日出～次日日出）
    today_local = datetime.datetime.now(tz).date()
    sunrise_list = []
    for i in range(days + 1):
        day = today_local + datetime.timedelta(days=i)
        obs = Observer(latitude=lat, longitude=lon)
        s = sun(obs, date=day, tzinfo=tz)
        sunrise_time = s['sunrise']
        sunrise_list.append(sunrise_time)

    # 构建日节点（每个节点含一个日期与起始和结束时间）
    sunrise_nodes = []
    for i in range(days):
        node = {
            'start': sunrise_list[i],
            'end': sunrise_list[i + 1],
            'date': sunrise_list[i].date(),
            'events': []
        }
        sunrise_nodes.append(node)

    # 6. 计算月相事件
    nodes_start = sunrise_nodes[0]['start']
    nodes_end = sunrise_nodes[-1]['end']
    range_start_utc = nodes_start.astimezone(pytz.utc)
    range_end_utc = nodes_end.astimezone(pytz.utc)

    ephem_start = ephem.Date(range_start_utc)
    ephem_end = ephem.Date(range_end_utc)

    moon_events = []
    cur_new = ephem.previous_new_moon(ephem_start)
    while True:
        nm_utc = cur_new.datetime().replace(tzinfo=pytz.utc)
        cur_fm = ephem.next_full_moon(cur_new)
        fm_utc = cur_fm.datetime().replace(tzinfo=pytz.utc)
        next_new = ephem.next_new_moon(cur_new)
        n2_utc = next_new.datetime().replace(tzinfo=pytz.utc)

        half_wax = nm_utc + (fm_utc - nm_utc) / 2
        half_wan = fm_utc + (n2_utc - fm_utc) / 2

        if range_start_utc <= nm_utc <= range_end_utc:
            moon_events.append({'time': nm_utc.astimezone(tz), 'type': '新月'})
        if range_start_utc <= half_wax <= range_end_utc:
            moon_events.append({'time': half_wax.astimezone(tz), 'type': '半月'})
        if range_start_utc <= fm_utc <= range_end_utc:
            moon_events.append({'time': fm_utc.astimezone(tz), 'type': '满月'})
        if range_start_utc <= half_wan <= range_end_utc:
            moon_events.append({'time': half_wan.astimezone(tz), 'type': '半月'})

        if next_new > ephem_end:
            break
        cur_new = next_new

    # 按时间先后排序月相事件
    moon_events.sort(key=lambda x: x['time'])

    # 7. 将月相事件划分到各日节点内
    for event in moon_events:
        for node in sunrise_nodes:
            if node['start'] <= event['time'] < node['end']:
                node['events'].append(event)
                break

    # 8. 输出结果：只输出包含月相事件的日节点
    print("\n包含月相事件的日节点（日期及事件）：")
    for node in sunrise_nodes:
        if node['events']:
            date_str = node['date'].strftime("%Y-%m-%d")
            print(f"{date_str}:")
            for event in node['events']:
                event_str = event['time'].strftime("%Y-%m-%d %H:%M:%S")
                print(f"   {event['type']} : {event_str}")
            print()

if __name__ == "__main__":
    main()
