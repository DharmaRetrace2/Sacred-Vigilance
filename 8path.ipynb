if __name__ == "__main__":
    # é»˜è®¤åæ ‡ï¼šåŒ—äº¬ (39Â°54'32"N, 116Â°23'11"E)
    lat_input = "39.54.32N"
    lon_input = "116.23.11E"
    
    # æ‚¨ä¹Ÿå¯ä»¥ä¿®æ”¹ä¸ºå…¶ä»–åæ ‡ï¼Œä¾‹å¦‚:
    # ä¸Šæµ·: "31.13.40N", "121.28.29E"
    # å¹¿å·: "23.07.48N", "113.15.48E"
    
    results = calculate_moon_phases(lat_input, lon_input, days=100)
