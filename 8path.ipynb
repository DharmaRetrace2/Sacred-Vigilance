import datetime
from skyfield import almanac
from skyfield.api import wgs84, load
import pytz
from timezonefinder import TimezoneFinder
from geopy.geocoders import Nominatim
import pandas as pd
from tabulate import tabulate

def parse_dms(coord_str, coord_type):
    """è§£æåº¦åˆ†ç§’æ ¼å¼çš„åæ ‡ (ä¾‹å¦‚: 39.54.32N)"""
    coord_str = coord_str.strip().upper()
    dir_letter = coord_str[-1]
    body = coord_str[:-1]
    
    if coord_type == 'lat' and dir_letter not in ['N', 'S']:
        raise ValueError("çº¬åº¦æ–¹å‘å¿…é¡»ä¸º N æˆ– S")
    if coord_type == 'lon' and dir_letter not in ['E', 'W']:
        raise ValueError("ç»åº¦æ–¹å‘å¿…é¡»ä¸º E æˆ– W")
    
    parts = body.split('.')
    if len(parts) != 3:
        raise ValueError(f"{'çº¬åº¦' if coord_type == 'lat' else 'ç»åº¦'}æ ¼å¼é”™è¯¯ï¼Œåº”ä¸º åº¦.åˆ†.ç§’+æ–¹å‘")
    
    d = float(parts[0])
    m = float(parts[1])
    s = float(parts[2])
    
    dec = d + m / 60 + s / 3600
    if dir_letter in ['S', 'W']:
        dec = -dec
    
    return dec

def get_location_name(lat, lon):
    """è·å–ä½ç½®åç§°"""
    try:
        geolocator = Nominatim(user_agent="moon_phase_calculator")
        location = geolocator.reverse(f"{lat}, {lon}", language='zh-CN', timeout=10)
        return location.address if location else "æœªçŸ¥åœ°ç‚¹"
    except Exception as e:
        return f"ä½ç½®è§£æå¤±è´¥: {str(e)}"

def get_timezone(lat, lon):
    """è·å–æ—¶åŒº"""
    try:
        tf = TimezoneFinder()
        tz_name = tf.timezone_at(lat=lat, lng=lon)
        return tz_name if tz_name else "UTC"
    except:
        return "UTC"

def calculate_moon_phases(lat_str, lon_str, days=100):
    """
    è®¡ç®—æœˆç›¸å’Œæ—¥å‡ºèŠ‚ç‚¹
    
    å‚æ•°:
        lat_str: çº¬åº¦å­—ç¬¦ä¸² (æ ¼å¼: åº¦.åˆ†.ç§’+N/Sï¼Œä¾‹å¦‚: 39.54.32N)
        lon_str: ç»åº¦å­—ç¬¦ä¸² (æ ¼å¼: åº¦.åˆ†.ç§’+E/Wï¼Œä¾‹å¦‚: 116.23.11E)
        days: è®¡ç®—å¤©æ•°ï¼Œé»˜è®¤100å¤©
    """
    
    print("="*80)
    print("ğŸŒ™ æ˜Ÿæœˆå† - æœˆç›¸ä¸æ—¥å‡ºè§‚æµ‹ç«™")
    print("è®¡ç®—æ—¥å‡ºèŠ‚ç‚¹é—´çš„æœˆç›¸å˜è¿")
    print("="*80)
    print()
    
    # è§£æåæ ‡
    lat = parse_dms(lat_str, 'lat')
    lon = parse_dms(lon_str, 'lon')
    
    print(f"ğŸ“ åæ ‡: {lat:.6f}Â°, {lon:.6f}Â°")
    
    # è·å–ä½ç½®ä¿¡æ¯
    print("â³ æ­£åœ¨è·å–ä½ç½®ä¿¡æ¯...")
    location_name = get_location_name(lat, lon)
    tz_name = get_timezone(lat, lon)
    tz = pytz.timezone(tz_name)
    
    print(f"ğŸ“ ä½ç½®: {location_name}")
    print(f"ğŸ• æ—¶åŒº: {tz_name}")
    print()
    
    # åŠ è½½å¤©æ–‡æ•°æ®
    print("â³ æ­£åœ¨åŠ è½½å¤©æ–‡æ•°æ®...")
    ts = load.timescale()
    eph = load('de421.bsp')  # è¡Œæ˜Ÿæ˜Ÿå†è¡¨
    
    # åˆ›å»ºè§‚æµ‹ç‚¹
    observer = wgs84.latlon(lat, lon)
    
    # è®¾ç½®æ—¶é—´èŒƒå›´
    now = datetime.datetime.now(tz)
    t0 = ts.from_datetime(now)
    t1 = ts.from_datetime(now + datetime.timedelta(days=days))
    
    # === 1. è®¡ç®—æ—¥å‡ºæ—¶é—´èŠ‚ç‚¹ ===
    print("â³ æ­£åœ¨è®¡ç®—æ—¥å‡ºæ—¶é—´...")
    f_sunrise = almanac.sunrise_sunset(eph, observer)
    times, events = almanac.find_discrete(t0, t1, f_sunrise)
    
    # ç­›é€‰æ—¥å‡ºäº‹ä»¶ (events=1è¡¨ç¤ºæ—¥å‡º, 0è¡¨ç¤ºæ—¥è½)
    sunrise_times = [t for t, e in zip(times, events) if e == 1]
    
    print(f"âœ… æ‰¾åˆ° {len(sunrise_times)} ä¸ªæ—¥å‡ºæ—¶é—´èŠ‚ç‚¹")
    
    # === 2. è®¡ç®—æœˆç›¸äº‹ä»¶ ===
    print("â³ æ­£åœ¨è®¡ç®—æœˆç›¸äº‹ä»¶...")
    
    # å®šä¹‰æœˆç›¸
    phase_names = {
        0: ('æ–°æœˆ', 'ğŸŒ‘'),
        1: ('ä¸Šå¼¦æœˆ (åŠæœˆ)', 'ğŸŒ“'),
        2: ('æ»¡æœˆ', 'ğŸŒ•'),
        3: ('ä¸‹å¼¦æœˆ (åŠæœˆ)', 'ğŸŒ—')
    }
    
    # æŸ¥æ‰¾æœˆç›¸äº‹ä»¶
    f_phase = almanac.moon_phases(eph)
    phase_times, phase_values = almanac.find_discrete(t0, t1, f_phase)
    
    moon_events = []
    for t, p in zip(phase_times, phase_values):
        phase_name, phase_icon = phase_names[p]
        moon_events.append({
            'time': t,
            'phase': phase_name,
            'icon': phase_icon,
            'phase_num': p
        })
    
    print(f"âœ… æ‰¾åˆ° {len(moon_events)} ä¸ªæœˆç›¸äº‹ä»¶")
    print()
    
    # === 3. åˆ›å»ºæ—¥èŠ‚ç‚¹å¹¶åŒ¹é…æœˆç›¸äº‹ä»¶ ===
    print("â³ æ­£åœ¨åŒ¹é…æœˆç›¸äº‹ä»¶åˆ°æ—¥å‡ºèŠ‚ç‚¹...")
    
    nodes = []
    for i in range(len(sunrise_times) - 1):
        nodes.append({
            'start': sunrise_times[i],
            'end': sunrise_times[i + 1],
            'events': []
        })
    
    # å°†æœˆç›¸äº‹ä»¶åˆ†é…åˆ°å¯¹åº”çš„æ—¥èŠ‚ç‚¹
    for event in moon_events:
        for node in nodes:
            # æ£€æŸ¥äº‹ä»¶æ—¶é—´æ˜¯å¦åœ¨èŠ‚ç‚¹æ—¶é—´èŒƒå›´å†…
            if node['start'].tt <= event['time'].tt < node['end'].tt:
                node['events'].append(event)
                break
    
    # === 4. ç”Ÿæˆç»“æœ ===
    results = []
    for node in nodes:
        if node['events']:  # åªæ˜¾ç¤ºåŒ…å«æœˆç›¸äº‹ä»¶çš„èŠ‚ç‚¹
            node_date = node['start'].astimezone(tz).strftime('%Y-%m-%d')
            
            for event in node['events']:
                event_time = event['time'].astimezone(tz)
                event_datetime_str = event_time.strftime('%Y-%m-%d %H:%M:%S')
                
                results.append({
                    'æ—¥èŠ‚ç‚¹æ—¥æœŸ': node_date,
                    'æœˆç›¸': event['icon'] + ' ' + event['phase'],
                    'å‘ç”Ÿæ—¶é—´': event_datetime_str
                })
    
    # === 5. æ˜¾ç¤ºç»“æœ ===
    print("="*80)
    print("ğŸŒ™ æœˆç›¸äº‹ä»¶åˆ—è¡¨")
    print("="*80)
    print()
    
    if results:
        df = pd.DataFrame(results)
        
        # ä½¿ç”¨tabulateç¾åŒ–è¾“å‡º
        print(tabulate(df, headers='keys', tablefmt='grid', showindex=False))
        print()
        print(f"ğŸ“Š æ€»è®¡: {len(results)} ä¸ªæœˆç›¸äº‹ä»¶è½åœ¨ {len([n for n in nodes if n['events']])} ä¸ªæ—¥èŠ‚ç‚¹ä¸­")
        
        # ç»Ÿè®¡å„æœˆç›¸æ•°é‡
        phase_count = df['æœˆç›¸'].value_counts()
        print()
        print("ğŸ“ˆ æœˆç›¸ç»Ÿè®¡:")
        for phase, count in phase_count.items():
            print(f"   {phase}: {count} æ¬¡")
    else:
        print("âŒ è¯¥æ—¶é—´æ®µå†…æœªå‘ç°ä¸»è¦æœˆç›¸äº‹ä»¶ã€‚")
    
    print()
    print("="*80)
    
    return results

